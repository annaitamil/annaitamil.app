<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.annaitamil.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>அன்னைத்தமிழ்</name>
    <description>
        அன்னைத்தமிழ் செயலி
    </description>
    <author email="tiruvarur.ramanan@gmail.com" href="https://annaitamil.github.io">
        அன்னைத்தமிழ்
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
